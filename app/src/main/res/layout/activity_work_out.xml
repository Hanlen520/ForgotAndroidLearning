<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="tech.fuge.www.forgotandroidlearning.activity.WorkOutActivity">

    <fragment
        android:id="@+id/fragment_workout_list"
        android:name="tech.fuge.www.forgotandroidlearning.fragment.WorkoutListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <fragment
        android:id="@+id/fragment_workout_details"
        android:name="tech.fuge.www.forgotandroidlearning.fragment.WorkoutDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="3" />
</LinearLayout>
